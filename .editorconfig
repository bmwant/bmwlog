root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.py]
max_line_length = 79

[*.{html,css,js,vue}]
indent_size = 2

[*.sql]
indent_size = 2

[*.sh]
indent_size = 2

[*.yml]
indent_size = 2

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab
