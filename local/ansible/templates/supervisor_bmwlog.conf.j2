[program:bmwlog]
environment=BMWLOG_MODE="{{ run_mode }}"
command={{ project_venv }}/bin/gunicorn run:app --config prod/gunicorn_settings.py
directory={{ project_root }}
user={{ ansible_ssh_user }}
autostart=true
autorestart=true
redirect_stderr=true
stdout_logfile=/var/log/bmwlog.supervisor.stdout
stopsignal=QUIT
